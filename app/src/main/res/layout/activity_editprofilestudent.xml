<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit Your Profile"
                    android:textSize="30dp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <EditText
                    android:layout_width="fill_parent"
                    android:id="@+id/sfname"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Student First Name"
                    android:singleLine="true"
                    android:textColor="#000" />

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:layout_width="fill_parent"
                    android:id="@+id/slname"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Student Last Number"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/semail"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Student Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sphone"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Student Phone Number"
                    android:inputType="phone"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dob"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Date of Birth"
                    android:inputType="date"
                    android:textColor="#000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Gender"
                    android:textColor="#000"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:id="@+id/male"
                            android:text="Female" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:id="@+id/female"
                            android:text="Male" />

                    </RadioGroup>
                </LinearLayout>
                <Spinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:entries="@array/country_arrays"
                    android:textSize="22dp"
                    />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/address"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Address"
                    android:singleLine="true"
                    android:textColor="#000" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pincode"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Pincode"
                    android:singleLine="true"
                    android:textColor="#000" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Acadmic Details"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/school"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="School/College Name"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/board"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="BOARD/University"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Class/Year"
                    android:inputType="phone"
                    android:id="@+id/classes"
                    android:textColor="#000" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Guardian Details"
                    android:textSize="18dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/pname"
                    android:hint="Guardian Name"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pemail"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Guardian Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pno"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Guardian Phone Number "
                    android:inputType="phone"
                    android:textColor="#000" />


                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/loginbutton_selector"
                    android:padding="3dp"

                    android:text="Save Details"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
</RelativeLayout>